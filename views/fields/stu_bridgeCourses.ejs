<%- include ("../partials/header") %>


  <div class="container-fluid">

    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/students/stu_bridgeCourses">
        <div class="container-fluid">

          <!-- Header Section -->

          <div class="row data-row">
            <div class="col-md-8 mb-3">
              <h4 class="mb-3 title">Bridge Courses Data Entry</h4>
            </div>
            <div class="col-md-4 mb-3 report">
              <a href="/students/search" class="btn btn-sm btn-primary shadow-sm"><i
                  class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
            </div>
          </div>
          <div class="row data-row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <label class="required">Subject Name</label>
                <input type="text" name="subName" class="form-control" required>
                <div class="invalid-feedback">
                  Valid subject name is required.
                </div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="required">Subject Code</label>
              <input type="text" name="subCode" class="form-control" onchange="setDate()" required>
            </div>
            <div class="invalid-feedback">
              Valid subject code is required.
            </div>
          </div>

          <div class="row data-row">
            <div class="col-md-6 mb-3">
              <label for="type" class="required">Department</label>
              <select name="dept" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>CSE</option>
                <option>ISE</option>
                <option>ECE</option>
                <option>TCE</option>
                <option>EEE</option>
                <option>CIV</option>
                <option>MECH</option>
                <option>MBA</option>
                <option>MCA</option>
                <option>Basic Sciences</option>
              </select>
              <div class="invalid-feedback">
                Valid department is required.
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <label class="required">Semester</label>
                <select name="semester" class="custom-select d-block w-100">
                  <option value="">Choose...</option>
                  <option>First Semester</option>
                  <option>Second Semester</option>
                  <option>Third Semester</option>
                </select>
                <div class="invalid-feedback">
                  Valid semester is required.
                </div>
              </div>
            </div>
          </div>
          <div class="row data-row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <label class="required">Topic</label>
                <input type="text" name="topic" class="form-control" required>
                <div class="invalid-feedback">
                  Valid topic is required.
                </div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="required">Session Date</label>
              <input type="date" name="sessionDate" class="form-control" required>
            </div>
          </div>

          <div class="row data-row">

            <div class="col-md-12 mb-3">
              <div class="form-group">
                <label class="required">COE</label>
                <!-- COE -->
                <%- include ("../partials/coe") %>

                  <div class="invalid-feedback">
                    Please select a valid type.
                  </div>
              </div>
            </div>
          </div>


          <!-- <div class="col-md-6 mb-3">

              <label class="required">Submission Date</label>
              <input type="date" class="form-control" name="filterDate" required>

              <div class="invalid-feedback">
                Please provide a valid details.
              </div>
            </div> -->


        </div>

        <%- include ("../partials/description") %>


          <div class="submit-button"><button class="btn btn-primary btn-lg btn-block buttons" type="submit"
              id="btnSubmit">
              Submit</button>
          </div>
  </div>



  </form>

  </section>
  <%- include ("../partials/footer") %>


    <script type="text/javascript" src="/js/textbox.js"></script>
    <script type="text/javascript" src="/js/date.js"></script>


    </body>

    </html>