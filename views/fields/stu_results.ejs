<%- include ("../partials/header") %>

<div class="container-fluid">
    <section id="form">
        <form id="myForm" class="needs-validation" novalidate action="/students/stu_results">
            <div class="container-fluid">
                <div class="row data-row">
                    <div class="col-md-8 mb-3">
                        <h4 class="mb-3 title">Results (After Reval) Data Entry</h4>
                    </div>
                    <div class="col-md-4 mb-3 report">
                        <a href="/students/search" class="btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">Academic Year</label>
                        <input type="number" min="2021" max="2999" name="academicYear" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid academic year is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Section</label>
                        <input type="text" name="section" maxlength="1" class="form-control" required>
                    </div>
                    <div class="invalid-feedback">
                        Valid section is required.
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label class="required">Pass Percentage</label>
                        <input type="number" name="passPercent" min="0.0" step="0.01" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid pass percentage is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Average CGPA</label>
                        <input type="number" name="avgCGPA" min="0.0" step="0.01" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid average CGPA is required.
                        </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="required">Semester</label>
                            <select class="custom-select d-block w-100" name="semester" required>
                              <option value="">Choose...</option>
                              <option>First Semester</option>
                              <option>Second Semester</option>
                              <option>Third Semester</option>
                              <option>Fourth Semester</option>
                              <option>Fifth Semester</option>
                              <option>Sixth Semester</option>
                              <option>Seventh Semester</option>
                              <option>Eighth Semester</option>
                            </select>
                            <div class="invalid-feedback">
                              Please select a valid semster.
                            </div>
                          </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Department</label>
                        <select name="department" class="custom-select d-block w-100" required>
                            <option value="">Choose...</option>
                            <option>CSE</option>
                            <option>ISE</option>
                            <option>ECE</option>
                            <option>TCE</option>
                            <option>EEE</option>
                            <option>CIV</option>
                            <option>MECH</option>
                            <option>MBA</option>
                            <option>MCA</option>
                            <option>Basic Sciences</option>
                        </select>
                        <div class="invalid-feedback">
                            Valid department is required.
                        </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-6 mb-3">
                        <label>COE</label>
                        <!-- COE -->
                        <%- include ("../partials/coe") %>

                        <div class="invalid-feedback">
                            Please select a valid type.
                        </div>

                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="required">Date of result announed</label>
                        <input type="date" name="resultDate" class="form-control" required>
                        <div class="invalid-feedback">
                            Please select a valid option.
                        </div>
                    </div>
                </div>
                <div class="row data-row">
                    <div class="col-md-4 mb-3">
                        <label class="required">No. of Students Failed</label>
                        <input type="number" name="nFail" min="0" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid count is required.
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="required">No. of Students Appeared</label>
                        <input type="number" name="nAppear" min="0" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid count is required.
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="required">No. of Students Passed</label>
                        <input type="number" name="nPass" min="0" class="form-control" required>
                        <div class="invalid-feedback">
                            Valid count is required.
                        </div>
                    </div>
                </div>

                <%- include ("../partials/description") %>
                <button class="btn btn-primary btn-lg btn-block buttons" type="submit">Submit</button>
            </div>
        </form>
    </section>


</div>

<!-- Footer -->
<%- include ("../partials/footer") %>


<script type="text/javascript" src="/js/date.js"></script>


</body>

</html>